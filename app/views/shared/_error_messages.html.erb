<% if object.errors.any? %>
  <div class="error-explanation">
    <div class="alert alert-danger">
      <p>Form contain</p> <%= pluralize(object.errors.count, "error") %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
