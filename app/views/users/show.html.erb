<% provide(:title, "Home")%>
<body id="personal" class="" >
    <div class="sidebar-nav" >
        <%# <a href="https://socialyte.codeplus.it/personal-profile.html" title="Profile"> %>
            <%# <img src="../app/assets/images/user.jpg" alt="User name" class="img-circle img-user"> %>
            <%= image_tag @user.profile_img.url, class: "img-circle img-user" %>
        <%# </a> %>
        <h2 class="text-center hidden-xs"><a href="https://socialyte.codeplus.it/personal-profile.html" title="Profile"><%= @user.name%></a></h2>
        
        <%# <button class="btn btn-follow btn-full-width btn-small-padding",  style="margin: 10px">
            Follow
        </button> %>
        <div style="margin-left: 15px">
            <%= render 'follow_form', user: @user,new_relation: @supports.new_relation,
            current_relation: @supports.current_relation,
            user: @user if logged_in?  %>
        </div>
        <br/>
        <div style="margin-left: 15px">
            <%= render 'shared/stat', user: @user %>
        </div>
       
    </div>
    <div class="content-posts profile-content">
        <div class="banner-profile">
        </div>
        <!-- Tab Panel -->
        <ul class="nav nav-tabs" role="tablist">
            <li class="active"><a href="#posts" role="tab" id="postsTab" data-toggle="tab" aria-controls="posts" aria-expanded="true">Last posts</a></li>
            <li><a href="#profile" role="tab" id="profileTab" data-toggle="tab" aria-controls="profile" aria-expanded="true">Profile</a></li>
        </ul>
        <!--Start Tab Content-->
        <div class="tab-content">

            <!-- Tab Posts -->
            <div class="tab-pane fade active in" role="tabpanel" id="posts" aria-labelledby="postsTab">
                <div id="posts-container" class="container-fluid container-posts">
                    <%= render "shared/micropost_form", micropost: @micropost if @user.current_user? current_user %>
                    <div id="list_post">
                        <% if @user.microposts.any? %>
                            <%= render partial: "microposts/micropost", collection: @microposts %>
                        <% end %>
                        <%= will_paginate @microposts %>
                    </div>
                </div>
            </div><!-- end Tab Posts -->

            <!--Start Tab Profile-->
            <div class="tab-pane fade" role="tabpanel" id="profile" aria-labelledby="profileTab">
                <div class="container-fluid container-posts">
                    <div class="card-post">
                        <ul class="profile-data">
                            <li><b>Username:</b> <%= @user.name %></li>
                            <li><b>Email:</b> <%= @user.email %></li>
                            <li><b>Gender:</b> <%= @user.gender %></li>
                            <li><b>Studies:</b> University of World</li>
                            <li><b>Job:</b> Full stack Developer</li>
                            <li><b>Description:</b> Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</li>
                        </ul>
                        <p><a href="https://socialyte.codeplus.it/personal-profile.html" title="edit profile"><i class="fa fa-pencil" aria-hidden="true"></i> Edit profile</a></p>
                    </div>
                </div>
            </div><!-- end tab Profile -->
        </div><!-- Close Tab Content-->
    </div>
</body>
